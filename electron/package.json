{
  "name": "attachmi",
  "version": "1.0.0",
  "description": "Attachmi is a desktop app for structured document storage, designed for the modern knowledge worker.",
  "homepage": "https://github.com/bensivo/Attachmi#readme",
  "bugs": {
    "url": "https://github.com/bensivo/Attachmi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bensivo/Attachmi.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch . --exec 'electron .'",
    "build": "npm run build:angular && npm run copy:angular && electron-builder",
    "build:angular": "cd ../angular && npm run build",
    "copy:angular": "rm -rf ./dist-angular && cp -r ../angular/dist ./dist-angular",
    "build:mac": "npm run build:angular && npm run copy:angular && electron-builder --mac",
    "build:win": "npm run build:angular && npm run copy:angular && electron-builder --win",
    "build:linux": "npm run build:angular && npm run copy:angular && electron-builder --linux"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.1.11"
  },
  "build": {
    "appId": "com.attachmi.app",
    "productName": "Attachmi",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "dist-angular/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "sign": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
